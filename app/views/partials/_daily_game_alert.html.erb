<div class="ui card">
  <%#= cache cache_per_day do %>
    <div class="content">
      <%= image_tag(favorite_team_info.image, class: "right floated mini ui image") %>
      <% if game_alert.message.nil? %>
        <div class="header">The <%= favorite_team_info.city %> <%= favorite_team_info.name %>  Play The <%= game_alert.opponent %> Today!</div>
      <% else %>
        <div class="header"><%= game_alert.message %></div>
      <% end %>
    </div>
    <div class="content">
      <% if game_alert.message.nil? %>
        <h4 class="ui sub header">vs. <%= game_alert.opponent %></h4>
      <% else %>
        <div></div>
      <% end %>
      <div class="meta"> </div>
      <div class="description">
        <% if game_alert.message.nil? %>
          <strong><%= game_alert.venue_name %></strong><br><br>
          <%= game_alert.venue_address %><br>
          <%= game_alert.venue_city %>, <%= game_alert.venue_state %> <%= game_alert.venue_zipcode %><br><br>
          Seen on: <strong><%= game_alert.broadcast %></strong> broadcast at<strong><%= game_alert.time_of_game %></strong>
        <% else %>
        <% end %>
      </div>
    </div>
  <%# end %>
</div>
